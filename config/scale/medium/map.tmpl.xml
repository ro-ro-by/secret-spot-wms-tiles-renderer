<?xml version="1.0" encoding="utf-8"?>
<Map srs="+proj=merc +a=6378137 +b=6378137 +lat_ts=0.0 +lon_0=0.0 +x_0=0.0 +y_0=0 +k=1.0 +units=m +nadgrids=@null +wktext  +no_defs">
  <Style name="default">
    <Rule>
      <Filter>[type] = 'spring'</Filter>
      <MarkersSymbolizer file="%DIR%/config/scale/medium/img/spring-v2.png" width="32" height="32"/>
      <TextSymbolizer fill="#8000FF"
                      halo-fill="#f7f7f7"
                      halo-radius="1"
                      size="10"
                      dy="-20"
                      wrap-width="100"
                      face-name="DejaVu Sans Book">
        [title] + ' ' + '(' + [type] + ')'
      </TextSymbolizer>
    </Rule>
    <Rule>
      <Filter>[type] = 'boulder'</Filter>
      <MarkersSymbolizer file="%DIR%/config/scale/medium/img/stone-v2.png" width="32" height="32"/>
      <TextSymbolizer fill="#8000FF"
                      halo-fill="#f7f7f7"
                      halo-radius="1"
                      size="10"
                      dy="-20"
                      wrap-width="100"
                      face-name="DejaVu Sans Book">
        [title] + ' ' + '(' + [type] + ')'
      </TextSymbolizer>
    </Rule>
    <Rule>
      <Filter>[type] = 'tree'</Filter>
      <MarkersSymbolizer file="%DIR%/config/scale/medium/img/tree-v2.png" width="32" height="32"/>
      <TextSymbolizer fill="#8000FF"
                      halo-fill="#f7f7f7"
                      halo-radius="1"
                      size="10"
                      dy="-20"
                      wrap-width="100"
                      face-name="DejaVu Sans Book">
        [title] + ' ' + '(' + [type] + ')'
      </TextSymbolizer>
    </Rule>
    <Rule>
      <Filter>([type] != 'spring') and ([type] != 'boulder') and ([type] != 'tree')</Filter>
      <MarkersSymbolizer file="%DIR%/config/scale/medium/img/something-v2.png" width="32" height="32"/>
      <TextSymbolizer fill="#8000FF"
                      halo-fill="#f7f7f7"
                      halo-radius="1"
                      size="10"
                      dy="-20"
                      wrap-width="100"
                      face-name="DejaVu Sans Book">
        [title] + ' ' + '(' + [type] + ')'
      </TextSymbolizer>
    </Rule>
  </Style>
  <Layer name="default" srs="+proj=merc +a=6378137 +b=6378137 +lat_ts=0.0 +lon_0=0.0 +x_0=0.0 +y_0=0 +k=1.0 +units=m +nadgrids=@null +wktext  +no_defs">
    <StyleName>default</StyleName>
    <Datasource>
      <Parameter name="type">postgis</Parameter>
      <Parameter name="host">%DB_HOST%</Parameter>
      <Parameter name="user">%DB_USER%</Parameter>
      <Parameter name="password">%DB_PASSWORD%</Parameter>
      <Parameter name="dbname">%DB_NAME%</Parameter>
      <Parameter name="geometry_field">location</Parameter>
      <Parameter name="geometry_table">points</Parameter>
      <Parameter name="table">points</Parameter>
    </Datasource>
  </Layer>
</Map>
